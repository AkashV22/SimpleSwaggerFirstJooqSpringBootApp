<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
    <appender name="STDOUTPUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d [%thread] %-5level %logger{36} %line - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.akashv22" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUTPUT"/>
    </logger>

    <logger name="com.akashv22.app.simpleswaggerfirstjooqspringbootapp" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUTPUT"/>
    </logger>

    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="STDOUTPUT"/>
    </logger>

    <logger name="org.apache.cxf" level="INFO" additivity="false">
        <appender-ref ref="STDOUTPUT"/>
    </logger>

    <logger name="org.jooq" level="INFO" additivity="false">
        <appender-ref ref="STDOUTPUT"/>
    </logger>

    <root level="WARN">
        <appender-ref ref="STDOUTPUT"/>
    </root>
</configuration>
